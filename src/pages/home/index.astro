---
import Layout from "../../layouts/Layout.astro";
import math from "../../assets/images/math.jpg";
import masonry from "../../assets/images/masonry.png";
import animation from "../../assets/images/animations.png";
---

<Layout title="Laboratory Frontend - Math">
  <main class="main">
    <nav class="navigation">
      <a class="option" href="/math">
        <h2 class="option__title">Math</h2>
        <figure class="option__image">
          <img
            class="image-math"
            src={math.src}
            alt="image with mathematical operations"
          />
        </figure>
      </a>

      <a class="option" href="/grid-css">
        <h2 class="option__title">GRID CSS</h2>
        <figure class="option__image">
          <img
            class="image-grid"
            src={masonry.src}
            alt="image with masonry grid"
          />
        </figure>
      </a>

      <a class="option" href="/animations">
        <h2 class="option__title">Animations</h2>
        <figure class="option__image">
          <img
            class="image-grid"
            src={animation.src}
            alt="image with masonry grid"
          />
        </figure>
      </a>
    </nav>
  </main>
</Layout>

<style>
  .main {
    padding: 4rem;
    width: 100%;
    height: 100%;
  }

  .navigation {
    width: 100%;
    height: 100%;
    display: grid;
    gap: 4rem;
  }

  .option {
    width: 100%;
    max-height: 400px;
    position: relative;
    &:hover {
      & .option__title {
        font-size: 4rem;
        position: absolute;
        width: 100%;
        height: 100%;
        display: grid;
        place-items: center;
        background-color: rgba(0, 0, 0, 0.307);
        border-radius: 1.6rem;
        color: white;
        backdrop-filter: blur(1rem);
      }
    }
  }

  .option__title {
    display: none;
  }

  .option__image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    border-radius: 1.6rem;
    > img {
      width: 100%;
      object-fit: cover;
    }
  }

  .image-math {
    aspect-ratio: 1/1;
  }

  .image-grid {
    aspect-ratio: 16/9;
  }
</style>
